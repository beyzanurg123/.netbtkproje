@model Candidate
<div class="display-6">
Apply
</div>
<form method="post" asp-action="apply">
<div class="text-danger" asp-validation-summary="All"> 

</div>
<div class="form-group">
<label asp-for="Email"></label>
<input asp-for="Email" class="form-control"/>
</div>
<div class="form-group my-2">
<label asp-for="FirstName"></label>
<input asp-for="FirstName" class="form-control"/>
</div>
<div class="form-group my-2">
<label asp-for="LastName"></label>
<input asp-for="LastName" class="form-control"/>
</div>

<div class="form-group my-2">
<label asp-for="Age"></label>
<select asp-for="Age" class="form-control">
<option value="18"> 18</option>
<option value="18"> 19</option>
<option value="18"> 20</option>
<option value="18"> 21</option>
<option value="18"> 22</option>
<option value="18"> 23</option>

</select>
</div>

<fieldset>

    <legend>Select one course</legend>

    <p>
        <input id="mvc" type="radio" asp-for="SelectedCourse" value="asp.net mvc" checked/>
        <label>ASP.NET Core MVC</label>
    </p>

        <p>
        <input id="api" type="radio" asp-for="SelectedCourse" value="asp.net api"/>
        <label>ASP.NET Core API</label>
    </p>

            <p>
        <input id="blazor" type="radio"asp-for="SelectedCourse" value="blazor"/>
        <label>Blazor</label>
    </p>

</fieldset>

<div>
    <button class="btn btn-primary" type="submit">Apply</button>
    <a class="btn btn-warning" href="/">home</a>
</div> 



</form>